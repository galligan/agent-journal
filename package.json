{
  "name": "private-journal-mcp",
  "version": "1.0.0",
  "description": "A lightweight MCP server that provides Claude with a private journaling capability to process feelings and thoughts",
  "main": "src/index.ts",
  "bin": {
    "private-journal-mcp": "./bin/private-journal-mcp"
  },
  "scripts": {
    "prepare": "bun run build:tsc",
    "build": "bun build src/index.ts --compile --outfile dist/private-journal-mcp",
    "build:production": "bun build src/index.ts --compile --minify --sourcemap --outfile dist/private-journal-mcp",
    "build:tsc": "tsc",
    "build:cross-platform": "bun run build:linux && bun run build:windows && bun run build:macos",
    "build:linux": "bun build src/index.ts --compile --target=bun-linux-x64 --outfile dist/private-journal-mcp-linux",
    "build:windows": "bun build src/index.ts --compile --target=bun-windows-x64 --outfile dist/private-journal-mcp-windows.exe",
    "build:macos": "bun build src/index.ts --compile --target=bun-darwin-arm64 --outfile dist/private-journal-mcp-macos",
    "dev": "bun --watch src/index.ts",
    "dev:hot": "bun --hot src/index.ts",
    "start": "bun src/index.ts",
    "test": "bun test",
    "test:jest": "jest",
    "test:watch": "bun test --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "mcp",
    "journal",
    "private",
    "claude",
    "ai"
  ],
  "author": "Jesse Vincent <jesse@fsck.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "@xenova/transformers": "^2.17.2"
  },
  "files": [
    "dist/**/*",
    "bin/**/*",
    "src/**/*",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  }
}
