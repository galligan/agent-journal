{
  "name": "agent-journal",
  "version": "1.0.0",
  "description": "A comprehensive MCP server that provides AI agents with journaling and knowledge management capabilities",
  "main": "dist/index.js",
  "bin": {
    "agent-journal": "./bin/agent-journal"
  },
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "node": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "prepare": "bun run build:tsc",
    "build": "bun build src/index.ts --compile --outfile dist/agent-journal",
    "build:production": "bun build src/index.ts --compile --minify --sourcemap --outfile dist/agent-journal",
    "build:tsc": "tsc",
    "build:cross-platform": "bun run build:linux && bun run build:windows && bun run build:macos",
    "build:linux": "bun build src/index.ts --compile --target=bun-linux-x64 --outfile dist/agent-journal-linux",
    "build:windows": "bun build src/index.ts --compile --target=bun-windows-x64 --outfile dist/agent-journal-windows.exe",
    "build:macos": "bun build src/index.ts --compile --target=bun-darwin-arm64 --outfile dist/agent-journal-macos",
    "dev": "bun --watch src/index.ts",
    "dev:hot": "bun --hot src/index.ts",
    "start": "bun src/index.ts",
    "test": "bun test",
    "test:jest": "jest",
    "test:watch": "bun test --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts"
  },
  "keywords": [
    "mcp",
    "journal",
    "agent",
    "claude",
    "ai",
    "knowledge-management"
  ],
  "author": "Jesse Vincent <jesse@fsck.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "@xenova/transformers": "^2.17.2"
  },
  "files": [
    "dist/**/*",
    "bin/**/*",
    "src/**/*",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  }
}
